{
	"name": "textbox-for-pdfkit-ts",
	"version": "0.1.9",
	"type": "module",
	"description": "A package to easily create beautiful Textboxes with pdfKit",
	"main": "./dist/pdfTextbox.cjs.js",
	"module": "./dist/pdfTextbox.es.js",
	"browser": "./dist/pdfTextbox.umd.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"browser": "./dist/pdfTextbox.umd.js",
			"import": "./dist/pdfTextbox.es.js",
			"require": "./dist/pdfTextbox.cjs.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"test": "vitest run",
		"generate": "tsx example/generatePDF.ts",
		"prepare": "pnpm build",
		"build": "vite build && tsc",
		"dev": "vite",
		"type-check": "tsc --noEmit",
		"vitest": "vitest --ui"
	},
	"keywords": [
		"textbox",
		"pdfkit"
	],
	"homepage": "https://github.com/tysonjf/textbox-for-pdfkit",
	"bugs": {
		"url": "https://github.com/tysonjf/textbox-for-pdfkit/issues"
	},
	"author": "Tyson Filia",
	"license": "MIT",
	"devDependencies": {
		"@types/jest": "^29.5.0",
		"@types/node": "^20.0.0",
		"@types/pdfkit": "^0.13.9",
		"@vitest/ui": "^3.1.4",
		"c8": "^10.1.3",
		"jest": "^29.7.0",
		"pdfkit": "^0.12.3",
		"ts-jest": "^29.1.0",
		"tsx": "^4.19.4",
		"typescript": "^5.0.0",
		"vite": "^5.0.0",
		"vitest": "^3.1.4"
	},
	"peerDependencies": {
		"pdfkit": "^0.12.3"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/tysonjf/textbox-for-pdfkit.git"
	}
}
